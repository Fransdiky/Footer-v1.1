<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Footer">

    <android.support.constraint.ConstraintLayout
        android:layout_width="411dp"
        android:layout_height="590dp"
        android:background="#000"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/logoGrey"
            android:layout_width="90dp"
            android:layout_height="50dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp" />

        <ImageView
            android:id="@+id/logoCopyright"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginTop="27dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/logoGrey"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/txtCopyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:maxLines="2"
            android:text="Copyright © 2018 PT. Reco Platform Indonesia"
            android:textColor="#fff"
            android:textSize="12dp"

            android:paddingRight="46dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="103dp"
            app:layout_constraintLeft_toRightOf="@+id/logoCopyright"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTerdaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#fff"
            android:text="Terdaftar di Kominfo 01396/DJAI.PSE/03/2019"
            android:textSize="12dp"

            android:paddingRight="40dp"
            android:layout_marginLeft="70dp"
            app:layout_constraintTop_toBottomOf="@id/txtCopyright"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/txtContactUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Contact Us"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:paddingRight="155.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoCopyright"/>

        <TextView
            android:id="@+id/txtEmailContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="contact@recorealestate.com"
            android:textColor="#fff"
            android:textSize="14dp"

            android:paddingRight="43dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtContactUs" />

        <TextView
            android:id="@+id/locationTower"
            android:layout_width="225dp"
            android:layout_height="wrap_content"

            android:text="The Gama Tower, 37ᵗʰ Floor"
            android:textColor="#fff"
            android:textSize="14dp"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:paddingRight="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtEmailContact" />

        <TextView
            android:id="@+id/txtJakarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Jakarta, Indonesia 12940"
            android:textColor="#fff"
            android:textSize="14dp"

            android:layout_marginRight="20.5dp"
            android:layout_marginTop="2dp"
            android:paddingRight="65.5dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationTower" />

        <TextView
            android:id="@+id/txtSosmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Social Media"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="#fff"

            app:layout_constraintTop_toBottomOf="@id/txtJakarta"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingRight="30dp"
            android:layout_marginRight="88dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/txtInstagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Instagram"
            android:textSize="14dp"
            android:textColor="#fff"

            android:paddingRight="45dp"
            app:layout_constraintTop_toBottomOf="@id/txtSosmed"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/txtTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="14dp"
            android:textColor="#fff"
            android:text="Twitter"


            app:layout_constraintTop_toBottomOf="@+id/txtInstagram"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingRight="64dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/txtFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Facebook"
            android:textColor="#fff"
            android:textSize="14dp"

            android:layout_marginLeft="30dp"
            android:paddingRight="50dp"
            app:layout_constraintTop_toBottomOf="@id/txtTwitter"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginRight="130.5dp"/>

        <TextView
            android:id="@+id/txtResources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Recousrces"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold"

            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtDeveloper"
            android:layout_marginLeft="30dp"
            android:paddingRight="40dp"/>

        <TextView
            android:id="@+id/txtTermofService"
            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:text="Terms of Service"
            android:textColor="#fff"
            android:textSize="14dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtResources"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/txtCommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="14dp"
            android:textColor="#fff"
            android:text="Community"

            app:layout_constraintTop_toBottomOf="@id/txtTermofService"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:paddingRight="40dp" />

        <TextView
            android:id="@+id/txtPrivacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="14dp"
            android:textColor="#fff"
            android:text="Privacy Policy"

            android:paddingRight="25dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/txtCommunity"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/txtImportLinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Important Links"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold"

            android:layout_marginLeft="30dp"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/txtFacebook"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/txtBuyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Buyer"
            android:textColor="#fff"
            android:textSize="14dp"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:paddingRight="78dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtImportLinks" />

        <TextView
            android:id="@+id/txtSalesAgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="14dp"
            android:textColor="#fff"
            android:text="Sales Agent"

            android:paddingRight="40dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@id/txtBuyer"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/txtDeveloper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="14dp"
            android:textColor="#fff"
            android:text="Developer"

            app:layout_constraintTop_toBottomOf="@+id/txtSalesAgent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:paddingRight="51dp"/>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Footer">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="325dp"
        android:background="#000"
        android:layout_marginTop="26dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/logoGrey"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp" />

        <ImageView
            android:id="@+id/logoCopyright"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toBottomOf="@+id/logoGrey"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="166dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="89dp"
            android:maxLines="2"
            android:text="Copyright © 2018 Reco Platform Pte. Ltd."
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="11dp"
            app:layout_constraintLeft_toRightOf="@+id/logoCopyright"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtContactUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="30dp"
            android:text="Contact Us"
            android:textColor="#fff"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtEmailContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contact@recorealestate.com"
            android:paddingRight="15dp"
            android:textColor="#fff"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="240dp"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtContactUs" />

        <TextView
            android:id="@+id/locationTower"
            android:layout_width="156dp"
            android:layout_height="33dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="2dp"
            android:paddingRight="30dp"
            android:text="The Gama Tower, 37ᵗʰ Floor"
            android:textColor="#fff"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtEmailContact" />

        <TextView
            android:id="@+id/txtJakarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20.5dp"
            android:text="Jakarta, Indonesia 12940"
            android:textColor="#fff"
            android:layout_marginTop="2dp"
            android:paddingRight="17dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginLeft="240dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationTower" />

        <TextView
            android:id="@+id/txtSosmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social Media"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#fff"
            android:paddingRight="30dp"
            android:layout_marginRight="88dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/txtJakarta"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="240dp" />

        <TextView
            android:id="@+id/txtInstagram"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtSosmed"
            android:text="Instagram"
            android:textSize="12dp"
            android:paddingRight="45dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/txtTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtInstagram"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingRight="60dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Twitter"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/txtFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtTwitter"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="240dp"
            android:paddingRight="48dp"
            android:text="Facebook"
            android:textColor="#fff"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:layout_marginRight="130.5dp"/>

        <TextView
            android:id="@+id/txtResources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#fff"
            android:text="Recousrces"
            android:textStyle="bold"
            android:paddingRight="35dp"
            app:layout_constraintTop_toBottomOf="@id/txtFacebook"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/txtTermofService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#fff"
            android:paddingRight="5dp"
            android:text="Terms of Service"
            app:layout_constraintTop_toBottomOf="@id/txtResources"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="90.5dp"/>

        <TextView
            android:id="@+id/txtCommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#fff"
            android:paddingRight="36dp"
            android:text="Community"
            app:layout_constraintTop_toBottomOf="@id/txtTermofService"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/txtPrivacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#fff"
            android:text="Privacy Policy"
            android:paddingRight="22dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/txtCommunity"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="240dp"/>

        <TextView
            android:id="@+id/txtImportLinks"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginTop="88dp"
            android:layout_marginLeft="32dp"
            android:text="Important Links"
            android:paddingRight="15dp"
            android:textColor="#fff"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoCopyright" />

        <TextView
            android:id="@+id/txtBuyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Buyer"
            android:paddingRight="70dp"
            android:textColor="#fff"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            app:layout_constraintTop_toBottomOf="@id/txtImportLinks" />

        <TextView
            android:id="@+id/txtSalesAgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingRight="36dp"
            android:textSize="12dp"
            android:textColor="#fff"
            android:text="Sales Agent"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintTop_toBottomOf="@id/txtBuyer"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/txtDeveloper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginTop="2dp"
            android:paddingRight="47dp"
            android:textColor="#fff"
            android:text="Developer"
            app:layout_constraintTop_toBottomOf="@+id/txtSalesAgent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"/>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>